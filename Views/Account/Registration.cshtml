@using Camping.App_GlobalResources
@model Camping.ViewModels.RegisterViewModel


@{
    ViewBag.Title = "Registration";
}

<div>
    <!-- banner-bottom -->
    <div class="banner-bottom">
        <!-- container -->
        <div class="container">
            <div class="faqs-top-grids">
                <div class="book-grids">
                    <div class="col-md-6 book-left">
                        <div class="book-left-info">
                            <h3>Create Your Govihar Account</h3>
                        </div>
                        <div class="book-left-form">
                            @using (Html.BeginForm("Registration", "Account", null, FormMethod.Post, new {enctype = "multipart/form-data"}))
                            {
                                @Html.AntiForgeryToken()
                                
                                    <p>First Name</p>
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @value="" }})
                                    <p>@Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "" })</p>
                                    <p>Last Name</p>
                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @value = "" } })
                                    <p>@Html.ValidationMessageFor(model => model.LastName, "", new { @class = "" })</p>
                                    <p>Phone Number</p>
                                    @Html.EditorFor(model => model.PhoneNomber, new { htmlAttributes = new { @value = "" } })
                                    <p>@Html.ValidationMessageFor(model => model.PhoneNomber, "", new { @class = "" })</p>
                                    <p>Email Address</p>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @value = "" } })
                                    <p>@Html.ValidationMessageFor(model => model.Email, "", new { @class = "" })</p>
                                    <p>Password</p>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @value = "" } })
                                    <p>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "" })</p>
                                    <p>Confirm Password</p>
                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @value = "" } })
                                    <p>@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "" })</p>
                                    <input type="submit" id="login" value="@Resource.Registration">
                                
                            }
                        </div>
                    </div>
                    <div class="col-md-6 book-left book-right">
                        <div class="book-left-info">
                            <h3>Recommended</h3>
                        </div>
                        <div class="book-left-bottom">
                            <div class="book-left-facebook">
                                <a href="#">Connect with Facebook</a>
                            </div>
                            <div class="book-left-chrome">
                                <a href="#">Connect with Google</a>
                            </div>
                        </div>
                        <ul>
                            <li>Access booking history with upcoming trips</li>
                            <li>Print tickets and invoices</li>
                            <li>Make checkouts simpler</li>
                            <li>Enter your contact details only once</li>
                            <li>Get alerts for low fares</li>
                        </ul>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
        <!-- //container -->
    </div>
    <!-- //banner-bottom -->
</div>



@using Camping.App_GlobalResources
@model Camping.ViewModels.RegisterViewModel


@{
    ViewBag.Title = "Registration";
}

<div>
    <!-- banner-bottom -->
    <div class="banner-bottom">
        <!-- container -->
        <div class="container">
            <div class="faqs-top-grids">
                <div class="book-grids">
                    <div class="col-md-3 book-left">

                    </div>
                    <div class="col-md-6 book-right book-left">
                        <div class="book-left-info">
                            <h2>@Resource.Registration</h2>
                        </div>
                        <div class="book-left-form">
                            @using (Html.BeginForm("Registration", "Account", null, FormMethod.Post, new {enctype = "multipart/form-data"}))
                            {
                                @Html.AntiForgeryToken()
                                @Html.EditorFor(model => model.FirstName, new {  htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.FirstName} })
                                <p>@Html.ValidationMessageFor(model => model.FirstName, "", new {@class = ""})</p>
                                @Html.EditorFor(model => model.LastName, new {  htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.LastName} })
                                <p>@Html.ValidationMessageFor(model => model.LastName, "", new {@class = ""})</p>
                                @Html.EditorFor(model => model.PhoneNomber, new {  htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Phone} })
                                <p>@Html.ValidationMessageFor(model => model.PhoneNomber, "", new {@class = ""})</p>
                                @Html.EditorFor(model => model.Email, new {  htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Email} })
                                <p>@Html.ValidationMessageFor(model => model.Email, "", new {@class = ""})</p>
                                @Html.EditorFor(model => model.Password, new {  htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Password, } })
                                <p>@Html.ValidationMessageFor(model => model.Password, "", new {@class = ""})</p>
                                @Html.EditorFor(model => model.ConfirmPassword, new {  htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.ConfirmPassword} })
                                <p>@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new {@class = ""})</p>
                                <input type="submit" id="login" value="@Resource.Registration">
                            }
                        </div>
                    </div>
                    <div class="col-md-3 book-right">

                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
        <!-- //container -->
    </div>
    <!-- //banner-bottom -->
</div>



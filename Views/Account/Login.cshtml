@using Camping.App_GlobalResources
@model Camping.ViewModels.LoginViewModel
@{
    ViewBag.Title = Resource.LogIn;
}

<div>
    <!-- banner-bottom -->
    <div class="banner-bottom">
        <!-- container -->
        <div class="container">
            <div class="faqs-top-grids">
                <div class="book-grids">
                    <div class="col-md-3 book-left">

                    </div>
                    <div class="col-md-6 book-left">
                        <div class="book-left-info">
                            <h2>@Resource.LogIn</h2>
                        </div>
                        <div class="book-left-form">
                            @using (Html.BeginForm("LogIn", "Account", null, FormMethod.Post, new {enctype = "multipart/form-data"}))
                            {
                                @Html.AntiForgeryToken()
                                @Html.EditorFor(model => model.EmailLogin, new { htmlAttributes = new { @placeholder = Resource.Email} })
                                <p>@Html.ValidationMessageFor(model => model.EmailLogin, "", new {@class = ""})</p>
                                @Html.EditorFor(model => model.PasswordLogin, new { htmlAttributes = new { @type = "password", @placeholder = Resource.Password} })
                                <p>@Html.ValidationMessageFor(model => model.PasswordLogin, "", new {@class = ""})</p>

                                <input type="submit" id="login" value="@Resource.LogIn">
                            }
                        </div>
                        <div class="book-left-info">
                            <h4>
                                @Html.ActionLink(Resource.ForgotPassword, "PassRecovery", "Account")
                            </h4>
                        </div>
                    </div>
                    <div class="col-md-3 book-right">

                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
        <!-- //container -->
    </div>
    <!-- //banner-bottom -->
</div>





@using Camping.App_GlobalResources
@model Camping.ViewModels.ListServisesViewModel
@{
    ViewBag.Title = @Model.Type;
}
<div class="banner-bottom">
    <div class="container">
        <div class="faqs-top-grids">
            <div class="product-grids">
                <div class="col-md-3 product-left">
                    
                </div>
                <div class="col-md-9 product-right">
                    @foreach (var house in Model.SeervicesList)
                    {
                        <div class="product-right-grids">
                            <div class="product-right-top">
                                <div class="p-left">
                                    <div class="p-right-img">
                                        <a href="@Url.Action("ServicePage", "Service", new {id = house.IdService}, null)">
                                            <img class="media-object" src="@house.Photo" alt="" height="100%" width="100%">
                                        </a>
                                    </div>
                                </div>
                                <div class="p-right">
                                    <div class="col-md-6 p-right-left">
                                        <a href="@Url.Action("ServicePage", "Service", new {id = house.IdService}, null)">
                                            <h3>@house.Name</h3>
                                        </a>                                      
                                    </div>
                                    <div class="col-md-6 p-right-right">
                                        <h6>@house.Rating/5</h6>
                                        <span class="p-offer">$@house.Prise</span>
                                    </div>
                                    <div class="clearfix"> </div>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>
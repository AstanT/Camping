@using Camping.App_GlobalResources
@model Camping.ViewModels.UserPageViewModel
@{ long userInSystem = Convert.ToInt64(Session["UserId"]); }

@{
    ViewBag.Title = Model.Name;
}

<div class="banner-bottom">
    <div class="container">
        <div class="about-info">
            <h2>@Model.Name</h2>
        </div>
        <div class="faqs-top-grids">
            <div class="col-md-7">
                @Html.Partial("LastOrder", Model.LastUserOrders)
            </div>
            <div class="col-md-5 contact-map">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object" src="@Model.Photo" alt="" height="50%" width="50%">
                    </a>
                    <br/><h4>@Resource.Phone : @Model.Phone</h4>
                    <br/><h4>@Resource.Email : @Model.Email</h4>
                    @if (HttpContext.Current.User.Identity.IsAuthenticated && Model.IdUserPage == userInSystem)
                    {
                        <br/><br/><br/><h4>@Html.ActionLink(@Resource.EditProfile, "EditProfile", new { id = Model.IdUserPage }, new { @style = " color: #000 " })</h4>
                        <br/><h4>@Html.ActionLink(@Resource.EditPassword, "EditPassword", new { id = Model.IdUserPage }, new { @style = " color: #000 " })</h4>
                    }

                    @if (HttpContext.Current.User.Identity.IsAuthenticated && Model.IdUserPage == userInSystem && userInSystem == 1)
                    {
                        <br /><h4>@Html.ActionLink(@Resource.AddService, "AddService","Service", null, new { @style = " color: #000 " })</h4>
                    }
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>